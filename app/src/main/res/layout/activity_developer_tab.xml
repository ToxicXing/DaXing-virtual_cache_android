<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/colorLeaf"
    tools:context="com.example.daxing.qualitytest.testControlActivity">

    <TextView
        android:layout_marginBottom="10dp"
        android:background="@drawable/card_border_dev"
        android:textColor="@color/colorLightLeaf"
        android:padding="5dp"
        android:id="@+id/wifiInfo"
        android:text="Wifi Information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:layout_marginBottom="10dp"
        android:background="@drawable/card_border_dev"
        android:textColor="@color/colorLightLeaf"
        android:padding="5dp"
        android:id="@+id/pingInfo"
        android:text="Ping Information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/wifiInfo"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:layout_marginBottom="10dp"
        android:background="@drawable/card_border_dev"
        android:textColor="@color/colorLightLeaf"
        android:padding="5dp"
        android:id="@+id/celluar"
        android:text="Data Information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pingInfo"
        android:layout_alignParentLeft="true"/>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_margin="2.5dp"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:textColor="@color/colorLightLeaf"
            android:background="@drawable/round_btn"
            android:layout_height="wrap_content"
            android:text="Wifi Info"
            android:id="@+id/b_wifi"/>

        <Button
            android:layout_margin="2.5dp"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:textColor="@color/colorLightLeaf"
            android:background="@drawable/round_btn"
            android:layout_height="wrap_content"
            android:text="Ping Test"
            android:id="@+id/b_ping" />

        <Button
            android:layout_margin="2.5dp"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:textColor="@color/colorLightLeaf"
            android:background="@drawable/round_btn"
            android:layout_height="wrap_content"
            android:text="Write Log"
            android:id="@+id/b_writelog" />

        <Button
            android:layout_margin="2.5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Data Info"
            android:textColor="@color/colorLightLeaf"
            android:background="@drawable/round_btn"
            android:id="@+id/b_celluar"
            android:layout_weight="0.25" />

    </LinearLayout>

</RelativeLayout>
