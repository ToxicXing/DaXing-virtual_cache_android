<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/colorLeaf"
    tools:context="com.example.daxing.qualitytest.testControlActivity">


    <LinearLayout
        android:id = "@+id/lin_trending"
        android:layout_below="@+id/loc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Spinner
            android:id = "@+id/region_code"
            android:layout_width = "0dp"
            android:layout_height ="wrap_content"
            android:layout_weight="0.80">
        </Spinner >

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.20"
            android:text="Select Region"
            android:id="@+id/b_trending"
            android:textColor="@color/colorLightLeaf"
            android:background="@drawable/round_btn" />

    </LinearLayout>

    <ListView android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ls_video"
        android:paddingTop="10dp"
        android:layout_below="@id/lin_trending">
    </ListView>


</RelativeLayout>
